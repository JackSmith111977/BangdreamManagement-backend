<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kei.tliaswebmanagement1.mapper.EmpMapper">

    <!--更新员工信息-->
    <update id="updateById">
        <!--原SQL语句不够灵活，复用性差需要动态拼接
        update emp set username=#{username},
                        name=#{name},
                        gender=#{gender},
                        phone=#{phone},
                        job=#{job},
                        salary=#{salary},
                        image=#{image},
                        entry_date=#{entryDate},
                        update_time=#{updateTime},
                        dept_id=#{deptId} where id=#{id}
        -->
        <!--动态SQL语句-->
        <!--set标签：自动生成set关键字；自动删除末尾多余逗号-->
        update emp
        <set>
            <if test="username!=null and username!=''">username=#{username},</if>
            <if test="password!=null and password!=''">password=#{password},</if>
            <if test="name!=null and name!=''">name=#{name},</if>
            <if test="gender!=null">gender=#{gender},</if>
            <if test="phone!=null and phone!=''">phone=#{phone},</if>
            <if test="job!=null">job=#{job},</if>
            <if test="salary!=null">salary=#{salary},</if>
            <if test="image!=null and image!=''">image=#{image},</if>
            <if test="entryDate!=null">entry_date=#{entryDate},</if>
            <if test="updateTime!=null">update_time=#{updateTime},</if>
            <if test="deptId!=null">dept_id=#{deptId}</if>
        </set>
        where id=#{id}

    </update>
    <!--批量删除员工信息-->
    <delete id="deleteByIds">
        delete from emp where id in
        <foreach collection="ids" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>

    <select id="listByPageHelper" resultType="com.kei.tliaswebmanagement1.pojo.Emp">
        select emp.id, username, password, emp.name, gender, phone, job, salary, image, entry_date, emp.create_time, emp.update_time, dept_id, dept.name deptName
        from emp left join dept on emp.dept_id = dept.id
        # where改用where标签，自动生成where关键字并去除冗余的and和or关键字
        <where>
            <!--条件不能写死，需要动态SQL-->
            <if test="name!=null and name!=''">
                emp.name like concat('%',#{name},'%')
            </if>
            <if test="gender!=null">
                and emp.gender = #{gender}
            </if>
            <if test="begin!=null and end!=null">
                and emp.entry_date between #{begin} and #{end}
            </if>
        </where>
        order by emp.update_time desc
    </select>

    <!--根据id查询员工信息-->
    <!--由于多段工作经历会产生多条数据，需要resultMap自定义封装-->
    <select id="getInfo" resultMap="empResultMap">
    <!--起别名，不容易出错-->
        select e.*,
               ee.id ee_id,
               ee.begin ee_begin,
               ee.company ee_company,
               ee.emp_id ee_empid,
               ee.end ee_end,
               ee.job ee_job from emp e left join emp_exp ee on e.id = ee.emp_id where e.id = #{id};
    </select>

    <!-- 统计员工职位数据 -->
    <select id="countEmpJobData" resultType="java.util.Map">
        select
            case when job=1 then '主唱'
                 when job=2 then '吉他手'
                 when job=3 then '贝斯手'
                 when job=4 then '键盘手'
                 when job=5 then '鼓手'
                 when job=6 then 'DJ'
                 when job=7 then '小提琴手'
                 else '其他' end as job,
            count(id) num
        from emp group by job order by num;
    </select>

    <!--统计员工性别信息-->
    <select id="getEmpGenderData" resultType="java.util.Map">
        select
            if(gender=1,'男性成员','女性成员') as name,
            count(id) as value
        from emp group by gender;
    </select>


    <!--自定义员工数据封装-->
    <resultMap id="empResultMap" type="com.kei.tliaswebmanagement1.pojo.Emp">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="name" property="name"/>
        <result column="gender" property="gender"/>
        <result column="phone" property="phone"/>
        <result column="job" property="job"/>
        <result column="salary" property="salary"/>
        <result column="image" property="image"/>
        <result column="entry_date" property="entryDate"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="dept_id" property="deptId"/>
        <!--封装多段工作经历-->
        <collection property="exprList" ofType="com.kei.tliaswebmanagement1.pojo.EmpExpr">
            <!--利用别名进行映射，不容易出错-->
            <id column="ee_id" property="id"/>
            <result column="ee_empid" property="empId"/>
            <result column="ee_company" property="company"/>
            <result column="ee_job" property="job"/>
            <result column="ee_begin" property="begin"/>
            <result column="ee_end" property="end"/>
        </collection>
    </resultMap>


</mapper>
